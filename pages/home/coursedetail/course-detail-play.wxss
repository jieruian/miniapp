.switchBtn{
  position: fixed;
  left: 0;
  top: 60vh;
  background-color: #28B8A1;
  height: 80rpx;
  width: 200rpx;
  color: white;
  line-height: 80rpx;
  padding-left: 20rpx;
}

.player-swiper {
height: 56.25vw;
white-space: nowrap;
position: relative;

}

#myAudio {
  width: 100vw;
  height: 56.25vw;
  /* background-color: antiquewhite; */
  position: relative;
}
.course-face {
  width: 190rpx;
  height: 280rpx;
  padding-top: 50rpx;
  margin-left: 40rpx;
  position: relative;
}
.course-face .play-control-btn{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top:50%;
  left: 50%;
  /* background-color: red; */
  margin-left:-50rpx;
  margin-top:-50rpx;
  
}
.course-face .play-control-btn image{
   width: 100rpx;
  height: 100rpx;
}
#myAudio .title-box{
  position: absolute;
  right: 20rpx;
  left: 260rpx;
  top: 50rpx;
  white-space: pre-wrap;
}

.course-face image {
  width: 100%;
  border-radius: 10rpx;
}
.title-name {
 font-weight: 600;
 font-size: 34rpx;
}
.title-detai{
  margin-top: 20rpx;
  color: #999999;
  font-size: 26rpx;
  font-weight: 300;
}
.play-count{
  position: absolute;
  right: 20rpx;
  left: 260rpx;
  bottom: 120rpx;
  color: #4A4A4A;
  font-size: 26rpx;
  font-weight: 300;
}

#myVideo {
  width: 100%;
  height: 56.25vw;
}
