/* components/progress.wxss */
.swiper{
  width: 100%;
  height: 2px;
  background: #d2d2d2;
  margin: 20px 0;
  position: relative;
  border-radius: 2px;
}
.line{
  height: 2px;
  background: #28B8A1;
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 2px 0 0 2px;
}
.slider{
  border-radius: 50%;
  background: #232323;
  position: absolute;
}