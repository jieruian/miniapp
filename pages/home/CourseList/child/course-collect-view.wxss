.course-cell {
  height: 240rpx;
  position: relative;
}

.course-face-box {
  height: 180rpx;
  width: 320rpx;
  background-color: #28B8A1;
  border-radius: 10rpx;
  margin:0 20rpx 20rpx;
  position: relative;
}

.fengmian{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.tip-num {
  position: absolute;
  left: 0rpx;
  bottom: 6rpx;
  width: 176rpx;
  height: 44rpx;
  z-index: 8;
}

.play-couser-btn{
  position: absolute;
  right: 20rpx;
  bottom: 6rpx;
  width: 80rpx;
  height: 44rpx;
}

.course-cell .article-name {
  position: absolute;
  right: 20rpx;
  top: 8rpx;
  left: 360rpx;
  font-size: 32rpx;
  font-weight: 450;
  color: #484848;
   white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.course-cell .article-mini-name {
  position: absolute;
  right: 20rpx;
  /* bottom: 95rpx; */
  top: 60rpx;
  left: 360rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #808080;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.course-cell .discuss-box{
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 300;
  color: #28B8A1;
  font-size: 24rpx;
  background-color: #D4F1EC;
  border-radius: 6rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 8rpx;
  position: absolute;
  right: 20rpx;
  bottom: 45rpx;
  left: 360rpx;
}
.discuss-title{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; 
}

.autor-name {
  position: absolute;
  right: 20rpx;
  bottom: 70rpx;
  left: 360rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #484848;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}