<!--components/banner-view/banner-view.wxml-->
<swiper circular
        autoplay
        interval='3000'
        duration='300'
        indicator-dots
        indicator-active-color='#fff'
        class='swiper'
        bindchange='swiperchange'>
<swiper-item wx:for="{{lists}}" wx:key="{{index}}" class="swiper-item" bindtap="swipClick">
<image src="{{item}}" mode="widthFix" ></image>
</swiper-item>
</swiper>
